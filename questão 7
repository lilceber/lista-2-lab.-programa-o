#include <stdio.h>
int main() {
 float x,y = 0,r;
printf("digite o primeiro valor: ");
 scanf("%f",&x);

 
 do {
printf("digite o segundo valor: ");
 scanf("%f",&y);

if (y == 0){
    printf("0 é inválido\n");
    
}else {
    r = x / y;
    printf("resultado: %.1f",r);  
}
} while (y == 0);
    return 0;
}
